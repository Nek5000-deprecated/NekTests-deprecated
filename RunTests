#! /bin/sh

#Create variables to store source paths
mkdir tools
cd tools
HERE_T=`pwd`

cd ../../trunk/nek
HERE_S=`pwd`


#Set Fortran&C compiler
cd ../tools/
sed -e "s:^F77*=\"\":F77=\"pgf77\":"  \
-e "s:^CC*=\"\":CC=\"pgcc\":"  maketools >maketools.buildbot
chmod +x maketools.buildbot

maketools.buildbot all              $HERE_T


##############################################################
#Begin testing...
cd ../../tests/test0001
cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/nek/makenek .
./makenek clean
./makenek test0001         $HERE_S
../tools/genmap << EOF
test0001
.05
EOF
./neklmpi test0001 1
./neklmpi test0001 4


#Test all examples...
cd ../../examples 
cd ./axi
cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/tools/scripts/mvn .
cp ../../trunk/nek/makenek .
../../tests/tools/genbox < gb.in
../../tests/tools/genmap < gm.in
mvn box axi
./makenek    clean
./makenek    axi           $HERE_S
./neklmpi axi 1
./neklmpi axi 4


cd ..
cd ./benard
cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/nek/makenek .
./makenek clean
./makenek ray_9
../../tests/tools/genmap << EOF
ray_9
.05
EOF
./neklmpi ray_9 1

./makenek clean
./makenek ray_cr
../../tests/tools/genmap << EOF
ray_dd
.05
EOF
neklmpi ray_dd 1

../../tests/tools/genmap << EOF
ray_dn
.05
EOF
neklmpi ray_dn 1

../../tests/tools/genmap << EOF
ray_nn
.05
EOF
neklmpi ray_nn 1
grep rayleigh *.log.1 > benard.err


cd ..
cd ./conj_ht
cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/nek/makenek .
./makenek    clean
./makenek    conj_ht       $HERE_S
../../tests/tools/genmap << EOF
conj_ht
.05
EOF
./neklmpi conj_ht 1
grep "tmax" conj_ht.log.1 | tail -1 > conj_ht.err.1
./neklmpi conj_ht 4
grep "tmax" conj_ht.log.4 | tail -1 > conj_ht.err.4


cd ..
cd ./eddy
cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/nek/makenek .
./makenek    clean
./makenek    eddy_uv       $HERE_S
../../tests/tools/genmap << EOF
eddy_uv
.05
EOF
./neklmpi eddy_uv 1
grep "err" eddy_uv.log.1 | tail -2 > eddy_uv.err.1
./neklmpi eddy_uv 4
grep "err" eddy_uv.log.4 | tail -4 > eddy_uv.err.4


cd ..
cd ./fs_2
cp ../../trunk/tools/scripts/nek200steps .
cp ../../trunk/nek/makenek .
./makenek    clean
./makenek    st1           $HERE_S
../../tests/tools/genmap << EOF
st1
.05
EOF
./nek200steps st1 1
grep "amp" st1.log.1 | tail -1 > st1.err.1
./nek200steps st1 4
grep "amp" st1.log.4 | tail -1 > st1.err.4

../../tests/tools/genmap << EOF
st2
.05
EOF
./nek200steps st2 1
grep "amp" st2.log.1 | tail -1 > st2.err.1
./nek200steps st2 4
grep "amp" st2.log.4 | tail -1 > st2.err.4

../../tests/tools/genmap << EOF
std_wv
.05
EOF
./nek200steps std_wv 1
grep "amp" std_wv.log.1 | tail -1 > std_wv.err.1
./nek200steps std_wv 4
grep "amp" std_wv.log.4 | tail -1 > std_wv.err.4


cd ..
cd ./fs_hydro
cp ../../trunk/tools/scripts/nek200steps .
cp ../../trunk/nek/makenek .
./makenek    clean
./makenek fs_hydro        $HERE_S 
../../tests/tools/genmap << EOF
fs_hydro
.05
EOF
./nek200steps fs_hydro 1
grep "AMP" fs_hydro.log.1 | tail -1 > fs_hydro.err.1
./nek200steps fs_hydro 4
grep "AMP" fs_hydro.log.4 | tail -1 > fs_hydro.err.4
 

cd ..
cd kovasznay
cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/nek/makenek .
./makenek    clean
./makenek    kov           $HERE_S
../../tests/tools/genmap << EOF
