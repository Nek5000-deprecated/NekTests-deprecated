cp ../../trunk/tools/scripts/neklmpi .
cp ../../trunk/tools/scripts/mvn .
cp ../../trunk/nek/makenek.bb .
../../tests/tools/genbox < gb.in
../../tests/tools/genmap < gm.in
mvn box axi
./makenek.bb    clean
./makenek.bb    axi           $HERE_S
./neklmpi axi 1
./neklmpi axi 4


cd ..
cd ./benard
